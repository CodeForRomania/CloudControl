<div {{bind-attr class=":box-header background::with-border"}} {{action 'toggleCollapse'}}>
  <h3 class="box-title">{{#if title}}{{{title}}}{{/if}} </h3>
  <div class="box-tools pull-right">
  	{{#if label}}
  		<span {{bind-attr class=":label labelClass"}}>
  			{{label}}
  		</span>
  	{{/if}}
  	{{#if collapsable}}
		<button {{bind-attr class=":btn buttonClass"}} {{action 'toggleCollapse' bubbles=false}}><i {{bind-attr class=":fa isCollapsed:fa-plus:fa-minus"}}></i></button>
	{{/if}}
	{{#if closable}}
		<button {{bind-attr class=":btn buttonClass"}} {{action 'close' bubbles=false}}><i class="fa fa-times"></i></button>
	{{/if}}
