<div {{bind-attr class=":box-body bodyClass"}}>
  {{yield}}
</div>
{{#if footer}}
	<div {{bind-attr class=":box-footer footerClass"}}>
	  	{{partial footer}}
	</div>
{{/if}}
{{#if isLoading}}
	<div class="overlay">
		<i class="fa fa-refresh fa-spin"></i>
	</div>
{{/if}}
